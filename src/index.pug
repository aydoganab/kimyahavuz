extends layout/layout

block title_keywords

	title İTÜ Kimya Havuz Dersleri

block page_content

	.kh-banner.position-relative.mb-3

		.text-white.bg-transparent.pt-4.position-absolute.overflow-hidden.w-100(style='bottom: 0; left:0; z-index: 1;')
			svg(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 3000 185.4')
				path(fill='currentColor', d='M3000,0v185.4H0V0c496.4,115.6,996.4,173.4,1500,173.4S2503.6,115.6,3000,0z')

		.py-0.py-md-3

		.container-xxl.py-3.py-md-5.position-relative(style='z-index: 2')
			.row
				.col-lg-5.text-center.text-lg-start.align-self-center
					h1.display-5.pt-2.pt-lg-0.pb-3.pb-md-0.text-primary İTÜ Kimya Havuz Dersleri
				.col-lg-7
					.rounded-3.shadow.p-3.p-md-5.bg-white
						.row.align-items-center
							.col-md-5.d-none.d-md-block
								h3 Sonuçlar
								p.lead.text-muted Ödev, sınav ve deney notlarınızı sorgulayın. Deney programınızı görüntüleyin.
							.col-md-7
								form.validate.d-none#sform(novalidate)
									.mb-3
										label.form-label.fw-bold Ders
										select#ders.form-select.w-auto(name='ders', required)
											option(value) Seçiniz
										.invalid-feedback Ders seçiniz
									.mb-3.d-none#div-donem(style='transition: all 0.5s ease-in;')
										label.form-label.fw-bold Dönem
										select#donem.form-select.w-auto(name='donem').


									.mb-3
										label.form-label.fw-bold Öğrenci no
										input.form-control#stdno(type='number', min='0', max='999999999', required, step='1', name='stdno', placeholder='9 haneli öğrenci numaranız', style='letter-spacing: 1px')
										.invalid-feedback 9 haneli öğrenci numranızı giriniz
									button.btn.btn-outline-primary(type='submit') Sorgula

		.py-4.py-md-5

	.container-xxl.d-none#guncel-duyurular
		h4.text-center.mb-3 Güncel Duyurular
		.row-duyuru#ryds
			// SUTRUCTURE
			//
				<div class="col-duyuru">
					<div class="duyuru-item">
						<span class="span-duyuru">KIM 101</span>
						<div class="duyuru-body">
						<p class="duyuru-p">Duyuru başlığı</p>
						<small class="duyuru-date">13 Mayıs</small>
						</div>
					</div>
					<a href="link-to-duyuru" class="duyuru-a"></a>
					</div>
	script(src='index.js')